#! @SHELL@

CC="@CC@"
MPI_CC="@MPI_CC@"
CFLAGS="@CFLAGS@"
F77="@F77@"
MPI_F77="@MPI_F77@"
FFLAGS="@FFLAGS@"
MPI_CFLAGS="@MPI_CFLAGS@"
MPI_FFLAGS="@MPI_FFLAGS@"
MPI_LIBS="@MPI_LIBS@"
LDFLAGS="@LDFLAGS@"
AR="@AR@"
RANLIB="@RANLIB@"

cross_spec_file="@CROSS_SPEC_FILE@"

if [ -f $cross_spec_file ] ; then
    echo "# C and Fortran development tool variables..." >> $cross_spec_file
else
    echo "# C and Fortran development tool variables..." > $cross_spec_file
fi

for var in CC MPI_CC CFLAGS F77 MPI_F77 FFLAGS MPI_CFLAGS MPI_FFLAGS MPI_LIBS LDFLAGS AR RANLIB ; do
    eval value=\$"$var"
    if [ "X$value" != "X" ] ; then
        echo "$var=\"$value\"" >> $cross_spec_file
    fi
done
